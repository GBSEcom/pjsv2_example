{
  "compilerOptions": {
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "include": [
    "src/client/*.ts",
    "src/client/*.tsx",
    "src/common/*.ts"
  ],
  "exclude": ["build", "node_modules", "src/server"]
}
